<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white_80">

    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/white_80" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/black_30" />
            <stroke
                android:width="1dp"
                android:color="@color/white_10" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>

    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/black_30" />
            <stroke
                android:width="1dp"
                android:color="@color/white_10" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>

    </item>

</ripple>