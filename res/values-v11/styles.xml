<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Home">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiTabTextIndicatorStyle">@style/TabText</item>
    </style>

    <style name="AppTheme.Home.Photos">
        <item name="vpiTabPageIndicatorStyle">@style/PhotosTabPageIndicator</item>
         <item name="actionBarStyle">@style/Widget.Styled.PhotosActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.PhotosActionBar</item>
    </style>
    <style name="AppTheme.Home.PhotoEditor">
        <item name="vpiTabPageIndicatorStyle">@style/PhotosTabPageIndicator</item>
         <item name="actionBarStyle">@style/Widget.Styled.PhotosActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.PhotosActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    
    <style name="ButtonCustomDialog" parent="@android:attr/borderlessButtonStyle">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/unread_message</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>