<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_updated_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical">


        <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/all_updated_image"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/sticker_019_allthebest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/all_updated_image"
            android:gravity="center"
            android:orientation="vertical">

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/all_packs_updated_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="@string/all_packs_updated_heading"
                android:textColor="@color/standard_black"
                android:textSize="24sp" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/all_packs_updated_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|top"
                android:text="@string/all_packs_updated_info"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/redirect_to_shop_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#1ECE84"
        android:gravity="center">

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/redirect_to_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:gravity="center"
            android:text="@string/redirect_to_shop_text"
            android:textColor="@color/white_100"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>