<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/delete_scroll_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/red_no_network"
        android:fillViewport="true">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:minHeight="280dp"
        android:layout_weight="45"
        android:background="#f1f2f1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/shocked_sticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Schocked humanoid sticker"
            android:paddingBottom="12dp"
            android:paddingTop="20dp"
            android:src="@drawable/shocked" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/del_acc_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="Delete account heading text"
            android:gravity="center_horizontal"
            android:text="@string/delete_account_heading"
            android:textColor="@color/rec_progress"
            android:textSize="16sp" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/del_acc_descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="Delete account description in left half"
            android:gravity="center_horizontal"
            android:text="@string/delete_account_description"
            android:textColor="@color/chat_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:minHeight="280dp"
        android:layout_weight="42"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/del_acc_heading_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:contentDescription="Delete account heading in right half"
            android:gravity="center_horizontal"
            android:text="@string/delete_account_heading_2"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <include
            android:layout_width="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            layout="@layout/country_phone_del_account" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_delete_account"
            android:layout_width="match_parent"
            android:maxWidth="235dp"
            android:layout_height="40dp"
            android:layout_below="@+id/country_phone_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/delete_account_button"
            android:stateListAnimator="@null" 
            android:contentDescription="Delete Account Button"
            android:onClick="deleteAccountClicked"
            android:text="@string/delete_my_account"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12" />

    </LinearLayout>

</LinearLayout>

    </ScrollView>

    </LinearLayout>
