<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

            <com.bsb.hike.ui.utils.RecyclingImageView
                android:id="@+id/group_profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ftue_broadcast_bg"
                android:src="@drawable/ic_default_avatar_broadcast" />
        </LinearLayout>

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/broadcast_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/broadcast_ftue_text_right_padding"
            android:paddingBottom="@dimen/broadcast_ftue_text_bottom_padding"
            android:text="@string/broadcast_ftue_message"
            android:textColor="#333333"
            android:textSize="17sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_broadcast_ftue"
            android:layout_width="121dp"
            android:layout_height="42.5dp"
            android:background="@drawable/bg_blue_btn"
            android:text="@string/got_it"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>