<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:paddingLeft="60dp"
    android:paddingRight="60dp" >
      
    <RelativeLayout
        android:id="@+id/broadcast_bg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="33dp"
        android:layout_marginTop="28dp" > 
        
     	<ImageView
        	android:id="@+id/broadcast_profile_image"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerVertical="true"
        	android:layout_centerInParent="true"
        	android:src="@drawable/ic_broadcast_medium" />
    </RelativeLayout>
     
    <LinearLayout
        android:id="@+id/broadcast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/broadcast_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        
      <com.bsb.hike.view.CustomFontEditText
        android:id="@+id/broadcast_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:hint="@string/name_broadcast"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_country_search_bar"
        android:maxLength="@integer/max_length_group_name"
        android:singleLine="true" />
      
     <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/broadcast_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="@string/broadcast_participant_info"/>
     
    </LinearLayout>

</RelativeLayout>