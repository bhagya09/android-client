<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <GridView
        android:id="@+id/selection_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:horizontalSpacing="@dimen/gallery_grid_spacing"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="@dimen/gallery_grid_spacing" />


    <LinearLayout
        android:id="@+id/tipContainerTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"></LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/selection_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/selection_grid"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/tipContainerTop" />


    <LinearLayout
        android:id="@+id/crop_actions_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/rotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:background="@drawable/bg_overflow_menu_selector"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_rotate" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/accept"
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_overflow_menu_selector"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_material_yes" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:background="@drawable/bg_overflow_menu_selector"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_material_no" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selection_grid"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle_bg_selector"
        android:onClick="onClick"
        android:src="@drawable/ic_crop" />

    <ImageButton
        android:id="@+id/ib_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ib_crop"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle_bg_selector"
        android:onClick="onClick"
        android:src="@drawable/btn_filter_enable" />

    <ImageButton
        android:id="@+id/ib_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ib_edit"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle_bg_selector"
        android:onClick="onClick"
        android:src="@drawable/ic_trash" />

</RelativeLayout>