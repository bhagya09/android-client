<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/parent_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="@dimen/st__action_bar_default_height"
             android:background="@color/white" >
    <ViewStub
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:layout="@layout/messageinfo_sent_text" />
    <ViewStub
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:layout="@layout/messageinfo_sent_image" />

    <ListView
        android:id="@+id/profile_content"
        android:paddingTop="@dimen/st__action_bar_default_height"
        style="@style/HomeList" />



</FrameLayout>
