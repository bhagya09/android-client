<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="40dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_weight="2"
        android:gravity="bottom" >

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/group_profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ftue_broadcast_bg"
            android:src="@drawable/ic_default_avatar_broadcast" />
    </LinearLayout>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/broadcast_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/broadcast_ftue_message"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_broadcast_ftue"
            android:layout_width="121dp"
            android:layout_height="42.5dp"
            android:background="@drawable/bg_blue_btn"
            android:text="@string/got_it"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>