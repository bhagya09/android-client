<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="4dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.bsb.hike.ui.utils.RecyclingImageView
                android:layout_width="344dp"
                android:layout_height="280dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/misc_timeline_ftue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/black_10" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/timeline_tab_selector"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/timeline_ftue_show_me"
                android:textColor="#018fe1"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>