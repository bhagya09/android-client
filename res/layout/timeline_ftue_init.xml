<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="6dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <FrameLayout
                android:id="@+id/upper_ftue_card"
                android:layout_width="fill_parent"
                android:layout_height="120dp" >

                <com.bsb.hike.ui.utils.RecyclingImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sticker_035_machaa" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.bsb.hike.ui.utils.RecyclingImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/voip_speaker_mute" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="MOEMNTS"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="2dp"
                        android:text="2 mins ago"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upper_ftue_card"
                android:layout_centerHorizontal="true"
                android:text="SHOW ME"
                android:textColor="@color/blue_hike"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>