<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/sm_no_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/sm_empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_empty_sm" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/sm_empty_desc1"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/SettingsItemHeader"
        android:text="@string/sm_empty_view_text1"
        android:textColor="@color/share_text"/>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/sm_empty_desc2"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/AtomicTipBodyText"
        android:text="@string/sm_empty_view_text2"
        android:textColor="@color/sm_ev_text"/>

</LinearLayout>