<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.bsb.hike"
    android:id="@+id/transact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2000000" >

    <ImageView
        android:id="@id/abs__up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left|center"
        android:contentDescription="@string/content_des_back_button_chatthread_actionbar"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_back"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/animation_avator_frame"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/abs__up" >

        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/animation_avatar"
            style="@style/RoundedStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left|center"
            android:layout_toRightOf="@+id/abs__up"
            android:contentDescription="@string/content_des_round_user_image_chatthread_actionbar" />

        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/offline_icon"
            style="@style/RoundedStyle"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_gravity="bottom|right"
            android:scaleType="centerInside"
            android:layout_marginRight="2dp"
            android:src="@drawable/iconconnection"
            android:visibility="visible"
             />
    </FrameLayout>

    <ImageView
        android:id="@+id/cross_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/connectionscreencross" 
        android:minWidth="40dp"
  		android:minHeight="40dp"
  		android:scaleType="center" />

    <FrameLayout
        android:id="@+id/animation_circular_progress_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" >

        <com.bsb.hike.view.HoloCircularProgress
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/animation_circular_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            app:marker_visible="false"
            app:progress="0.5"
            app:progress_background_color="@color/white_10"
            app:progress_color="@color/white_10"
            app:stroke_width="6dp"
            app:thumb_visible="false" />

        <ImageView
            android:id="@+id/bead"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignTop="@+id/animation_circular_progress"
            android:layout_gravity="center|top"
            android:src="@drawable/stroke"
            android:visibility="gone" />
        
    </FrameLayout>
    
	<com.bsb.hike.view.CustomFontTextView
	    android:id="@+id/connectionInfo"
	    android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation_circular_progress_holder"
       
        android:text="Connecting to Sahil"
        android:textSize="18dp"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_marginTop="21dp" 
       >
    </com.bsb.hike.view.CustomFontTextView>

	<com.bsb.hike.view.CustomFontTextView
        android:id="@+id/second_message"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connectionInfo"
        android:text=""
        android:gravity="center"
        android:textSize="18dp"
        
        android:layout_marginBottom="4dp"
        android:layout_marginTop="18dp"
        android:visibility="invisible"
        >
    </com.bsb.hike.view.CustomFontTextView>
    
	 <View
	     android:id= "@+id/divider"
         android:layout_width="fill_parent"
         android:layout_height="1dp"
         android:layout_marginLeft="47dp"
         android:layout_marginRight="47dp"
         android:background="@color/white_20"
         android:layout_below="@+id/connectionInfo"
         android:layout_marginTop="35dp"
  		 android:visibility="gone"
        
        />
	 
	<Button
	    android:id="@+id/retry_button"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/divider"
	    android:layout_alignLeft="@+id/divider"
	    android:layout_alignRight="@+id/divider"
	    android:layout_centerHorizontal="true"
	    style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
	    android:text="RETRY" 
	    android:layout_marginTop="5dp"
	    android:background="@drawable/offline_retry_button_selector"
	    android:textColor="@color/white"
	    android:visibility="gone"
	    
	    />
	
	 <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/disconnect_layout" >
    </FrameLayout>
</RelativeLayout>