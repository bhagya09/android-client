<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.bsb.hike"
    android:id="@+id/transact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000" >

    <ImageView
        android:id="@id/abs__up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left|center"
        android:contentDescription="@string/content_des_back_button_chatthread_actionbar"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_back"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/animation_avator_frame"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/abs__up" >

        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/animation_avatar"
            style="@style/RoundedStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left|center"
            android:layout_toRightOf="@+id/abs__up"
            android:contentDescription="@string/content_des_round_user_image_chatthread_actionbar" />

        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/offline_icon"
            style="@style/RoundedStyle"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/iconconnection"
            android:visibility="invisible" />
    </FrameLayout>

    <ImageView
        android:id="@+id/cross_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/abs__up"
        android:layout_marginRight="19dp"
        android:src="@drawable/connectionscreencross" />

    <FrameLayout
        android:id="@+id/animation_circular_progress_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" >

        <com.bsb.hike.view.HoloCircularProgress
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/animation_circular_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            app:marker_visible="false"
            app:progress="0.5"
            app:progress_background_color="@color/white_10"
            app:progress_color="@color/white_10"
            app:stroke_width="6dp"
            app:thumb_visible="false" />

        <ImageView
            android:id="@+id/bead"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignTop="@+id/animation_circular_progress"
            android:layout_gravity="center|top"
            android:src="@drawable/stroke" />
        
    </FrameLayout>
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation_circular_progress_holder"
        android:layout_centerInParent="true"
        android:text="Connecting to Sahil"
        android:gravity="center"
        android:visibility="gone"
        >
    </TextView>
	<TextView
        android:id="@+id/connectionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_centerInParent="true"
        android:text="Connecting to Sahil"
        android:textSize="18sp"
        android:gravity="center" >
    </TextView>

	<Button
	    android:id="@+id/retry_button"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/connectionInfo"
	    android:layout_alignLeft="@+id/animation_circular_progress_holder"
	    android:layout_alignRight="@+id/animation_circular_progress_holder"
	    android:layout_centerHorizontal="true"
	    style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
	    android:text="RETRY" 
	    android:layout_marginTop="10dp"
	    android:textColor="@color/white"
	    android:visibility="gone"
	    />

</RelativeLayout>