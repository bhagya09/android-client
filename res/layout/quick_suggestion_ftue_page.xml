<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <GridView
        android:id="@+id/sticker_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="@dimen/sticker_padding"
        android:paddingRight="@dimen/sticker_padding"
        android:paddingTop="8dp"
        android:horizontalSpacing="@dimen/sticker_grid_horizontal_padding"
        android:verticalSpacing="@dimen/sticker_padding"
        android:scrollbarStyle="outsideOverlay"/>

    <com.bsb.hike.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="@string/qs_ftue_page_tap_text"/>

</LinearLayout>