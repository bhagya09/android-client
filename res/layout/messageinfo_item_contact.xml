<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
 	<LinearLayout
        android:id="@+id/conversation_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="63dp"
        android:background="@drawable/conversation_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/conv_item_padding"
        android:paddingRight="@dimen/conv_item_padding" >

        <FrameLayout
            android:layout_width="@dimen/message_info_contact_avatar"
            android:layout_height="@dimen/message_info_contact_avatar"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <com.bsb.hike.view.RoundedImageView
                android:id="@+id/avatar"
                style="@style/AvatarStyle.MorePadding" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:paddingBottom="3dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/contact"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:text="Alice Stone"
                    style="@style/ListItemHeaderTextView" />
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop=".5dp"
                android:id="@+id/default_timestamp">

                 <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/timestamp"
                    android:layout_marginRight="16dp"
                    style="@style/ListItemSubHeaderTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:visibility="visible" />


               
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop=".5dp"
                android:id="@+id/expandedReadLayout">

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/expand_read_text"
                    style="@style/ListItemSubHeaderTextView"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:text="Read"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/read_message_timestamp"
                    android:layout_marginRight="16dp"
                    style="@style/ListItemSubHeaderTextView"
                    android:layout_width="wrap_content"
                    android:text="5 PM TOday"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop=".5dp"
                android:id="@+id/expandedDeliveredLayout">

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/expand_delivered_text"
                    style="@style/ListItemSubHeaderTextView"
                    android:layout_width="wrap_content"
                    android:text="Delivered"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/delivered_message_timestamp"
                    android:layout_marginRight="16dp"
                    style="@style/ListItemSubHeaderTextView"
                    android:layout_width="wrap_content"
                    android:text="4 PM TOday"/>

            </LinearLayout>
        </LinearLayout>

 </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="72dp"
    android:layout_marginRight="16dp"
    android:background="@color/black_alpha_10"
    android:id="@+id/dividermiddle"
        android:visibility="gone"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_alpha_10"
        android:visibility="gone"
        android:id="@+id/dividerend"></View>
</LinearLayout>