<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/privacy_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.bsb.hike.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            style="@style/ListSectionTextView"
            android:text="@string/manage_privacy"/>
        <ImageView
            android:id="@+id/arrow_image"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_keyboard_arrow_down_black"
            />

    </LinearLayout>

    <com.bsb.hike.view.ExplandingCells.ExpandingLayout
        android:id="@+id/expanding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/last_seen_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="63dp"
            android:background="@drawable/list_item"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/last_seen_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_seen"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"/>

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/ls_update_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ls_privacy_subtext"
                    android:textColor="@color/settings_text_subheader_color"
                    android:textSize="13sp"/>
            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/last_seen_switch"
                android:layout_marginTop="21.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/home_screen_list_divider"/>


        <LinearLayout
            android:id="@+id/status_update_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="63dp"
            android:background="@drawable/list_item"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/status_update_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_update"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"/>

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/status_update_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/su_privacy_subtext"
                    android:textColor="@color/settings_text_subheader_color"
                    android:textSize="13sp"/>
            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/status_update_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21.5dp"
                android:background="@null"/>

        </LinearLayout>

    </com.bsb.hike.view.ExplandingCells.ExpandingLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/home_screen_list_divider"/>

</LinearLayout>