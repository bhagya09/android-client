<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/circular_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/bg_ct_beach_2"
            app:riv_corner_radius="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:animateLayoutChanges="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Uploading profile picture"
                android:textColor="@color/black_70"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="2px"
                android:background="#11000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                android:orientation="horizontal" >

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/retry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/timeline_tab_selector"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:text="RETRY"
                    android:textColor="@color/blue_hike"
                    android:textSize="12sp" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:background="#11000000" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:background="@drawable/timeline_tab_selector"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:text="CANCEL"
                    android:textColor="@color/blue_hike"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/shadow_bot" />

</LinearLayout>