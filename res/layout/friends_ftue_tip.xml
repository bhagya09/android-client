<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ftue_friends_tips"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/white_90"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible">

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/art_friends"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_friends_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friends_ftue_heading"
                android:textColor="#3d475b"
                android:textSize="16sp"/>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_friends_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:textColor="#7a3a3a3a"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#14000000"/>

    <LinearLayout
        android:id="@+id/add_friend_ftue_button"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:gravity="center">

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/add_friend_button_tv"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_add_friend"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/ADD_FRIEND"
            android:textColor="@color/blue_color_span"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>