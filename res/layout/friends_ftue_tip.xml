<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/ftue_friends_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/friends_ftue_heading"
        android:textColor="#3d475b"
        android:textSize="18sp"/>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/ftue_friends_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="48dp"
        android:maxLines="2"
        android:textColor="#5c000000"
        android:textSize="14sp"
        />

    <com.bsb.hike.view.CustomFontButton
        android:id="@+id/add_friend_button"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="36dp"
        android:layout_gravity="right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:text="@string/ADD_FRIEND"
        android:textColor="@color/blue_hike"
        android:textSize="14sp"
        android:textStyle="bold|italic"/>

</LinearLayout>