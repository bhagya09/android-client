<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/deleteSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"/>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/deleteSwitch"
        android:orientation="vertical"
        android:layout_marginTop="13dp">

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/header"
            android:text="@string/sm_clear_all_header"
            style="@style/ListItemHeaderTextView"
            android:textStyle="normal"/>

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/subHeader"
            android:layout_marginTop="4dp"
            android:text="@string/sm_clear_all_subheader"
            style="@style/ListItemSubHeaderTextView"/>
    </LinearLayout>

    <View
        android:id="@+id/item_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/text_container"
        android:background="@color/home_screen_list_divider"/>

</RelativeLayout>