<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.bsb.hike.view.CustomFontEditText
            android:id="@+id/shortcut_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Abbreviation" />

        <com.bsb.hike.view.CustomFontEditText
            android:id="@+id/expansion_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Expansion" />

        <Button
            android:id="@+id/add_shorthand_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + " />
    </LinearLayout>

    <ListView
        android:id="@+id/atr_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

	<include layout="@layout/kpt_keyboard_viewholder"/>

</RelativeLayout>
