<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/all_updated_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

    <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/all_updated_image"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/sticker_019_allthebest" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/all_packs_updated_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/all_packs_updated_heading"
            android:textColor="@color/standard_black"
            android:textSize="24sp" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/all_packs_updated_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center|top"
            android:text="@string/all_packs_updated_info"
            android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/redirect_to_shop_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#1ECE84"
        android:layout_weight="0"
        android:layout_gravity="bottom"
        android:gravity="center">

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/redirect_to_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:gravity="center"
            android:text="@string/redirect_to_shop_text"
            android:textColor="@color/white_100"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
