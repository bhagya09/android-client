<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="19dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical">

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/dictionary_language_name"
            style="@style/SettingsHeaderItemTextView"
            android:text="English" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkbox_status"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:button="@drawable/hike_list_item_checkbox"
            android:checked="false"
            android:focusable="false"
            android:gravity="center_vertical" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateDrawable="@drawable/rotating_blue"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
