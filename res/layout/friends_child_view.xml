<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/compose_item_height"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/conv_item_padding"
        android:paddingRight="@dimen/conv_item_padding" >
        
        <com.bsb.hike.view.RoundedImageView
             android:id="@+id/avatar"
             android:layout_width="@dimen/compose_avatar_dimen"
             android:layout_height="@dimen/compose_avatar_dimen"
             style="@style/RoundedStyle"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true" />
        
        <RelativeLayout android:id="@+id/action_container"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="@dimen/compose_item_height" >

            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:background="@drawable/list_item"
                android:src="@drawable/ic_add_friend"
                android:visibility="gone" />
            
        <CheckBox
	        android:id="@+id/checkbox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:button="@drawable/hike_list_item_checkbox"
	        android:background="@android:color/transparent"
	        android:clickable="false"
	        android:focusable="false"
	        android:visibility="gone" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/invite_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_green_btn_selector"
            android:gravity="center"
            android:maxWidth="80dp"
            android:minWidth="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="@string/invite_1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/online_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/ic_online_green_dot" />
        
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/action_container"
            android:layout_toRightOf="@id/avatar"
            style="@style/compose_name_container_margins"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/contact"
                style="@style/ListItemHeaderTextView" />
                
            <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal"
            	android:layout_marginTop="1.5dp" >
            	
            	<ImageView
            	    android:id="@+id/status_mood"
            	    android:layout_width="17dp"
            	    android:layout_height="17dp"
            	    android:layout_marginTop="2dp"
            	    android:layout_marginRight="5dp"
            	    android:visibility="gone" />
            	
            	<com.bsb.hike.view.CustomFontTextView
                	android:id="@+id/last_seen"
	                style="@style/ListItemSubHeaderTextView"
	                android:visibility="visible" />
        	</LinearLayout>
            	
        </LinearLayout>
    </RelativeLayout>
