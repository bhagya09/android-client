<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.bsb.hike.ui.utils.RecyclingImageView
        android:id="@+id/album_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/gallery_selection_padding"
        android:scaleType="centerInside"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/album_image"
        android:layout_alignTop="@+id/album_image" >

        <ImageButton
            android:id="@+id/remove_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_remove_selection"
            android:padding="@dimen/remove_selection_padding"
            android:src="@drawable/ic_remove_selection" />
    </LinearLayout>

</RelativeLayout>