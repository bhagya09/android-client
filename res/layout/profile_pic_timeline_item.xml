<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/timeline_tab_selector"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingLeft="2dp"
        card_view:contentPaddingRight="2dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:background="@color/transparent" >

                <RelativeLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="@dimen/small_avatar"
                    android:layout_height="@dimen/small_avatar"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" >

                    <com.bsb.hike.view.RoundedImageView
                        android:id="@+id/avatar"
                        style="@style/AvatarStyle.Padding" />

                    <ImageView
                        android:id="@+id/avatar_frame"
                        style="@style/AvatarStyle" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/avatar_container"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/avatar_container" >

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Atul M"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/avatar_container"
                    android:text="2 mins ago"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp" />
            </RelativeLayout>

            <com.bsb.hike.ui.utils.SquareRecyclingImageView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_container"
                android:onClick="onViewImageClicked"
                android:scaleType="centerCrop"
                android:src="@drawable/misc_timeline_ftue" />

            <LinearLayout
                android:id="@+id/details_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_pic"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <com.bsb.hike.view.LinkedTextView
                    android:id="@+id/main_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:text="Added you as a friend"
                    android:textColor="#b8000000"
                    android:textSize="16dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actions_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/btn_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:button="@drawable/btn_love_selector"
                    android:text=""
                    android:textColor="#CCCCCC" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/text_btn_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Like"
                    android:textColor="#cccccc"
                    android:textSize="16dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>