<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_no_network"
    android:fillViewport="true"
    android:id="@+id/delete_scroll_view" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="480dp"
        android:background="#ffffff"
        android:orientation="vertical" >>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f2f1"
            android:orientation="vertical"
            android:paddingBottom="23dp"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:paddingTop="23dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:src="@drawable/shocked" />

            <com.bsb.hike.view.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"                
                android:gravity="center"
                android:text="@string/delete_account_heading"
                android:textColor="@color/rec_progress"
                android:textSize="16sp" />

            <com.bsb.hike.view.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/delete_account_description"
                android:textColor="@color/chat_color"
                android:textSize="15sp" />
        </LinearLayout>

        <com.bsb.hike.view.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:text="@string/delete_account_heading_2"
            android:textSize="12sp" />

        <include
            android:layout_centerHorizontal="true"
            layout="@layout/country_phone" />

        <com.bsb.hike.view.CustomFontButton
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_phone_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/delete_account_button"
            android:onClick="deleteAccountClicked"
            android:stateListAnimator="@null" 
            android:text="@string/delete_my_account"
            android:textColor="@color/white"
            android:textSize="14sp" />
        
    </LinearLayout>
    
</ScrollView>

    </LinearLayout>
