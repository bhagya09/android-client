<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/main_select_layout"
        android:background="@color/hidden_mode_ftue" >

        <TextView
            android:id="@+id/show_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="use accessibility for better Stickey experience"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_select_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/main_select_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/main_text_select_all"
                style="@style/SettingsHeaderItemTextView"
                android:text="@string/settings_select_all"/>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/side_text_select_all"
                style="@style/SettingsHeaderSubItemTextView"
                android:gravity="center_vertical"
                android:maxLines="4"
                android:text="@string/sticker_widget_show" />

        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/select_all_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:gravity="center_vertical"
            android:paddingRight="20dp" />
    </LinearLayout>

    <View
        android:id="@+id/main_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/main_select_layout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="#E6E6E6" >
    </View>

    <ListView
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_divider"
        android:divider="@drawable/sticker_settings_list_divider" >
    </ListView>

</RelativeLayout>
