<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/caller_reply_view"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        android:background="#676460">

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/conv_item_ts_color"
            android:text="@string/spam"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"/>

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/caller_location"
            android:layout_below="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/conv_item_last_msg_color"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:text="@string/spam"/>

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:layout_toRightOf="@+id/caller_name"
            android:layout_above="@+id/caller_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/hike_caller_logo" />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/caller_reply_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black_unknwon_contacts"
        android:orientation="horizontal" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/block_unknown_contact"
            style="@style/BlockAddUnknownContact"
            android:text="@string/block_title" />

        <View
            android:id="@+id/spam_unknown_contact_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:background="#3DFFFFFF" />

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/spam_unknown_contact"
            style="@style/BlockAddUnknownContact"
            android:text="@string/caller_spam" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:background="#3DFFFFFF" />

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/add_unknown_contact"
            style="@style/BlockAddUnknownContact"
            android:tag="@string/save_unknown_contact"
            android:text="@string/save_unknown_contact" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentTop="true"
        android:background="#60787878" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="#60787878" />

</RelativeLayout>