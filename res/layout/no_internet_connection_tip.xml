<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_error_chat_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/no_internet_card_background" >

    <ImageView
        android:id="@+id/free_hike_no_netwrok_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:paddingTop="18dp"
        android:paddingLeft="18dp"
        android:paddingBottom="18dp"
        android:paddingRight="5dp"
        android:src="@drawable/connectionscreencross" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/free_hike_no_netwrok_btn"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <com.bsb.hike.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:text="@string/no_internet_connection"
            android:textColor="@color/actionbar_text"
            android:textSize="15sp" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/scan_free_hike_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_free_hike_connection"
            android:textColor="@color/actionbar_text"
            android:textSize="13sp"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout>