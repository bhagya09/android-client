<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/text_container_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_vertical|right"
                android:minHeight="30dp"
                >

    <RelativeLayout
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/day_container"
        android:layout_marginRight="@dimen/chat_bubble_edge_spacing"
        android:background="@drawable/ic_bubble_white_pointing_right_selector"
        android:orientation="vertical"
        >

        <com.bsb.hike.view.CustomSendMessageTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#262626"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>

