<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/chat_bubble_edge_spacing"
    android:paddingRight="@dimen/chat_bubble_edge_spacing"
    android:weightSum="1.0">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/share_container_height"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/cta1"
        android:visibility="gone">
        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/cta1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="@string/share"
            android:drawableLeft="@drawable/ic_forward"
            android:textColor="@color/share_text"
            android:layout_centerInParent="true"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:padding="0dp"
            android:ellipsize="end"/>
    </RelativeLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="20dp"
        android:background="@color/divider_bg"
        android:id="@+id/divider"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/share_container_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/cta2"
        android:visibility="gone">

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/cta2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="@string/share"
            android:paddingTop="5dp"
            android:drawableLeft="@drawable/ic_forward"
            android:textColor="@color/share_text"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:padding="0dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    </RelativeLayout>
</LinearLayout>