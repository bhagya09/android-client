<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.bsb.hike.ui.utils.SquareRecyclingImageView
                    android:id="@+id/dp_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/misc_timeline_ftue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dp_big"
                    android:layout_alignLeft="@+id/dp_big"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.bsb.hike.view.RoundedImageView
                        android:id="@+id/avatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_launcher" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/black_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upper_ftue_card"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.bsb.hike.ui.utils.RecyclingImageView
                    android:id="@+id/remove_ftue"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:background="@drawable/timeline_tab_selector"
                    android:padding="18dp"
                    android:layout_marginTop="0.5dp"
                    android:src="@drawable/ic_popup_close" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:id="@+id/ftue_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/timeline_tab_selector"
                    android:gravity="center" >

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/addfavtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="18dp"
                        android:paddingTop="18dp"
                        android:text="@string/timeline_add_as_fav"
                        android:textColor="#018fe1"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <com.bsb.hike.ui.utils.RecyclingImageView
                        android:id="@+id/ftue_fav_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/addfavtext"
                        android:src="@drawable/icon_favorites" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>