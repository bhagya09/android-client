<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg" >
     <android.support.v7.widget.Toolbar
        android:id="@+id/abp__toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        style="@style/Widget.Styled.ActionBar"
        android:clickable="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        
        
         >
         
	    <LinearLayout
	        android:id="@+id/back"
	        android:layout_width="wrap_content"
	        android:layout_height="?attr/actionBarSize"
	        android:background="@drawable/back_container_selector"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingRight="5dp" >
	        <ImageView
	            android:id="@id/up"
	            android:layout_width="55dp"
	            android:layout_height="wrap_content"
	            android:paddingLeft="16dp"
	            android:paddingRight="8dp"
	            android:src="@drawable/ic_back_arrow" />
	
	            
	          
		</LinearLayout>
	<com.bsb.hike.view.CustomFontTextView
	                android:id="@+id/title"
	                style="@style/ActionBarText"
	                android:layout_marginLeft="17dp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="1dp"
	                android:ellipsize="end"
	                android:clickable="false" />
        </android.support.v7.widget.Toolbar>
         <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/abp__toolbar" >

    <ListView
        android:id="@+android:id/list"
        android:choiceMode="none"
        style="@style/SettingsInteriorList" />

    <View 
        android:layout_below="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/home_list_divider"/>
    </FrameLayout>
</RelativeLayout>