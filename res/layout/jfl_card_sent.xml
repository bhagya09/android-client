<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical|right"
    android:minHeight="30dp"
    android:paddingBottom="4dp">

    <ViewStub
        android:id="@+id/day_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/message_day_container" />

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/day_container"
        android:paddingBottom="2.5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/message_container"
            android:layout_width="@dimen/native_card_message_container_wide_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sender_details"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:minHeight="130dp"
            android:padding="0dp"
            android:tag="@string/content_card_tag"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/native_cardview_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/card_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:tag="m1">

                    <RelativeLayout
                        android:id="@+id/placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.bsb.hike.view.RoundedCornerImageView
                            android:id="@+id/file_thumb"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center" />

                        <RelativeLayout
                            android:id="@+id/circular_bg"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_ft_progress"
                            android:gravity="center">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/bg_ft_progress" />

                            <ProgressBar
                                android:id="@+id/initializing"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_centerInParent="true"
                                android:indeterminateDrawable="@drawable/circular_double_spinner" />

                            <com.bsb.hike.view.HoloCircularProgress xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/progress"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                app:marker_visible="false"
                                app:progress="0.0"
                                app:progress_background_color="@color/white_45"
                                app:progress_color="@color/white_85"
                                app:stroke_width="3dp"
                                app:thumb_visible="false" />

                            <ImageView
                                android:id="@+id/action"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>

                <ViewStub
                    android:id="@+id/share_stub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/card_container"
                    android:layout="@layout/share_container" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <include
            android:id="@+id/time_status"
            layout="@layout/message_time_status_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/message_container"
            android:layout_marginRight="@dimen/chat_bubble_time_edge_spacing"
            android:layout_marginTop="4dp" />
    </RelativeLayout>

    <View
        android:id="@+id/selected_state_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/overlay"
        android:layout_alignTop="@id/overlay" />

    <ViewStub
        android:id="@+id/message_info_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/overlay"
        android:layout="@layout/message_sent_info" />

</RelativeLayout>
