<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/caller_main_layout_top"
        android:orientation="horizontal" >

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/hike_caller_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/hike_caller_logo"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/caller_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <com.bsb.hike.ui.utils.RecyclingImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/hike_name_caller_logo" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/caller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="@color/conv_item_ts_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/caller_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textColor="@color/timestampcolor"
                android:textSize="14sp"
                android:visibility="gone" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/caller_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textColor="@color/timestampcolor"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/net_not_connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/net_not_connected"
            android:textColor="@color/subtext"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal" >

                <com.bsb.hike.ui.utils.RecyclingImageView
                    android:id="@+id/caller_settings_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/settings_icon" />

                <com.bsb.hike.ui.utils.RecyclingImageView
                    android:id="@+id/caller_close_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/close_icon" />
            </LinearLayout>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/caller_save_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="SAVE CONTACT"
                android:textColor="#1b92d7"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/caller_main_layout_bottom"
        android:orientation="horizontal" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/caller_call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="CALL"
            android:textColor="#666666"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/caller_sms_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="SMS"
            android:textColor="#666666"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/caller_free_call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="FREE CALL"
            android:textColor="#1b92d7"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/caller_free_sms_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="FREE SMS"
            android:textColor="#1b92d7"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>