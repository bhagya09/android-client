<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shadow_overflow" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/over_flow_rounded"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp" >

                <com.bsb.hike.ui.utils.RecyclingImageView
                    android:id="@+id/hike_caller_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/hike_caller_logo" />

                <com.bsb.hike.ui.utils.RecyclingImageView
                    android:id="@+id/caller_close_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/close_icon" />

                <com.bsb.hike.ui.utils.RecyclingImageView
                    android:id="@+id/caller_settings_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@id/caller_close_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/settings_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@id/caller_settings_button"
                    android:layout_toRightOf="@id/hike_caller_logo"
                    android:orientation="vertical" >

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/caller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/conv_item_ts_color"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/caller_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/conv_item_last_msg_color"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/caller_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_weight="1"
                        android:text="sabdjsandlk "
                        android:textColor="@color/conv_item_last_msg_color"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/show_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/caller_settings_button"
                    android:layout_toRightOf="@id/hike_caller_logo"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/caller_free_call"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/caller_sms_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/sms_head"
                android:textColor="@color/subtext"
                android:textSize="14sp"
                android:visibility="visible" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/caller_sms_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/sms_head"
                android:textColor="@color/standard_light_grey"
                android:textSize="13sp"
                android:visibility="visible" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/caller_dismiss_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dismiss_with"
                android:textColor="@color/action_bar_disabled_text"
                android:textSize="11sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/caller_free_layout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/caller_free_call"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="18dp" >

                    <com.bsb.hike.ui.utils.RecyclingImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/caller_call_icon" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/free_call"
                        android:textColor="@color/caller_free_call"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="@color/home_screen_list_divider" />

                <LinearLayout
                    android:id="@+id/caller_free_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <com.bsb.hike.ui.utils.RecyclingImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/caller_message_icon" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/free_message"
                        android:textColor="@color/caller_free_call"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>