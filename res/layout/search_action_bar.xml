<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search_next"
        android:theme="@style/Theme.Sherlock" />

    <ImageView
        android:id="@+id/previous"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/next"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search_prev"
        android:theme="@style/Theme.Sherlock" />

    <LinearLayout
        android:id="@+id/search_plate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/previous"
        android:background="@drawable/bg_top_bar_search_box"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.bsb.hike.view.CustomFontEditText
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-6dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/search_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-6dp"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_top_bar_search_close"
            android:theme="@style/Theme.Sherlock"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>