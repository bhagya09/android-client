<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" 
            android:text="@string/hike_direct_info"
			android:textSize="13sp"
            android:textColor="@color/black_55"/>

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/how_it_works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text ="@string/how_hike_direct_works"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/first_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" 
            android:text ="@string/condition_one"
            android:textSize="13sp"
            android:textColor="@color/black_55"/>

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_offline_distance" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/second_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="13sp"
            android:text ="@string/condition_two"
            android:textColor="@color/black_55" />

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_hike_direct_menu" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/group_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text ="@string/offline_group_query" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/group_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black_55"
            android:textSize="13sp"
            android:text ="@string/offline_group_answer" />
    </LinearLayout>

</ScrollView>