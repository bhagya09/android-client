<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_attachment_theme"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="26dp"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:paddingTop="12dp" >

    <GridView
        android:id="@+id/attachment_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="@dimen/attachment_column_width"
        android:gravity="center"
        android:listSelector="@drawable/grid_item"
        android:numColumns="3"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:stretchMode="none"
        android:verticalSpacing="12dp" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="left"
        android:text="@string/file_attachment_info"
        android:textColor="#5c000000"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

</LinearLayout>