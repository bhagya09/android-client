<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/st__action_bar_default_height"
        android:animateLayoutChanges="true"
        android:background="@color/black"
        android:orientation="horizontal">

        <com.edmodo.cropper.CropImageView
            android:id="@+id/cropimageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/crop_actions_panel"
            android:layout_gravity="center"
            android:background="#000000"
            custom:fixAspectRatio="true"
            custom:guidelines="on"
            custom:imageResource="@drawable/bg_ct_beach_2"
            custom:scaleType="fitCenter" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_rotate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ib_remove"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/ib_remove"
                    android:background="@color/black_16"
                    android:text="@string/rotate"
                    android:textColor="@color/white_75"
                    android:textSize="11sp" />

                <ImageButton
                    android:id="@+id/rotateLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_bg_selector"
                    android:src="@drawable/ic_rotate" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ib_edit"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/ib_edit"
                    android:background="@color/black_16"
                    android:text="@string/filters"
                    android:textColor="@color/white_75"
                    android:textSize="11sp" />

                <ImageButton
                    android:id="@+id/ib_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ib_crop"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_bg_selector"
                    android:onClick="onClick"
                    android:src="@drawable/ic_filter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_crop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ib_crop"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/ib_crop"
                    android:background="@color/black_16"
                    android:text="@string/crop"
                    android:textColor="@color/white_75"
                    android:textSize="11sp" />

                <ImageButton
                    android:id="@+id/ib_crop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_bg_selector"
                    android:onClick="onClick"
                    android:src="@drawable/ic_crop" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/crop_actions_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="bottom|right">

                <ImageButton
                    android:id="@+id/accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/circle_bg_selector"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_accept" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="bottom|left">

                <ImageButton
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle_bg_selector"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cancel" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>