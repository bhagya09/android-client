<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/st__action_bar_default_height"
        android:animateLayoutChanges="true"
        android:background="@color/black"
        android:orientation="horizontal">

        <com.edmodo.cropper.CropImageView
            android:id="@+id/cropimageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/crop_actions_panel"
            android:layout_gravity="center"
            android:background="#000000"
            custom:fixAspectRatio="true"
            custom:guidelines="on"
            custom:imageResource="@drawable/bg_ct_beach_2"
            custom:scaleType="fitCenter" />


        <LinearLayout
            android:id="@+id/crop_actions_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:visibility="gone">


            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_overflow_menu_selector"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="@string/CANCEL"
                android:textColor="@color/white_75"
                android:textSize="16sp" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/transparent_white_ab" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_overflow_menu_selector"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="@string/OK"
                android:textColor="@color/white_75"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:id="@+id/crop_panel_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/crop_actions_panel"
            android:layout_margin="5dp"
            android:background="@color/transparent_white_ab"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/container_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/crop_actions_panel"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/container_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ib_edit"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/ib_edit"
                    android:background="@drawable/translucent_text_bh"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="@string/filters"
                    android:textColor="@color/white_75"
                    android:textSize="11sp" />

                <ImageButton
                    android:id="@+id/ib_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ib_crop"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_bg_selector"
                    android:onClick="onClick"
                    android:src="@drawable/ic_filter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_crop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ib_crop"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/ib_crop"
                    android:background="@drawable/translucent_text_bh"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="@string/crop"
                    android:textColor="@color/white_75"
                    android:textSize="11sp" />

                <ImageButton
                    android:id="@+id/ib_crop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_bg_selector"
                    android:onClick="onClick"
                    android:src="@drawable/ic_crop" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_rotate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ib_remove"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/ib_remove"
                    android:background="@drawable/translucent_text_bh"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="@string/rotate"
                    android:textColor="@color/white_75"
                    android:textSize="11sp" />

                <ImageButton
                    android:id="@+id/rotateLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_bg_selector"
                    android:src="@drawable/ic_rotate" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>