<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="5dp" >

        <LinearLayout
            android:id="@+id/close_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_overflow_menu_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/close_action_mode"
                android:contentDescription="@string/content_des_reset_selected_contacts_create_group"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close_action_mode" />
        </LinearLayout>

        
        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/title"
            style="@style/ActionBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/close_action_mode"
            android:text="@string/selected_count" />
    </LinearLayout>

</RelativeLayout>