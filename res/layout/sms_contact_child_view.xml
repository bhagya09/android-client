<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/compose_item_height"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/contact_list_item_padding"
        android:paddingRight="@dimen/contact_list_item_padding" >

            <com.bsb.hike.view.RoundedImageView
                android:id="@+id/avatar"
                style="@style/RoundedStyle"
                android:layout_width="@dimen/compose_avatar_dimen"
                android:layout_height="@dimen/compose_avatar_dimen"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            
            
            <RelativeLayout
            android:id="@+id/action_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/compose_item_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/invite_btn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_green_btn_selector"
                android:gravity="center"
                android:text="@string/invite_1"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/invite_icon"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="@string/content_des_user_invitation_on_hike"
                android:scaleType="centerInside"
                android:src="@drawable/ic_invite" />
            
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/info_container"
                style="@style/compose_name_container_margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/action_container"
                android:layout_toRightOf="@id/avatar"
                android:orientation="vertical" >

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/contact"
                    style="@style/ListItemHeaderTextView"
                    android:text="Kavin Mittal kja skldlkas daskd asdjlasj dlasdl asdj las das d" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/info"
                    style="@style/ListItemSubHeaderTextView"
                    android:text="what&apos;s up dude?  I really like cookies.  They taste so good and fresh.  I like pie as well.  I&apos;m so fat" />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>