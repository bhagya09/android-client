<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/compose_item_height"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/conv_item_padding"
        android:paddingRight="@dimen/conv_item_padding" >

        <com.bsb.hike.view.RoundedImageView
             android:id="@+id/avatar"
             android:layout_width="@dimen/compose_avatar_dimen"
             android:layout_height="@dimen/compose_avatar_dimen"
             style="@style/RoundedStyle"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true" />


        <ImageView
            android:id="@+id/accept"
            style="@style/RequestBtn.Accept"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/reject"
            style="@style/RequestBtn.Reject"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/accept" />

        <LinearLayout
            android:id="@+id/contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/reject"
            android:layout_toRightOf="@id/avatar"
            style="@style/compose_name_container_margins"
            android:paddingBottom="12dp"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/contact"
                android:text="Kavin Mittal kja skldlkas daskd asdjlasj dlasdl asdj las das d"
                style="@style/ListItemHeaderTextView" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/last_seen"
                android:text="what&apos;s up dude?  I really like cookies.  They taste so good and fresh.  I like pie as well.  I&apos;m so fat"
                android:layout_marginTop="4dp"
                style="@style/ListItemSubHeaderTextView"
                android:singleLine="false" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>