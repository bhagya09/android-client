<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sticker_recommend_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/sticker_recommend_padding"
    android:paddingTop="@dimen/sticker_recommend_padding" >

    <android.support.v7.widget.RecyclerView
       android:id="@+id/twoWayView"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:layout_weight="5.8"
       android:paddingLeft="2dp"
       android:scrollbars="none" >
    </android.support.v7.widget.RecyclerView>

    <com.bsb.hike.ui.utils.RecyclingImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_sticker_recommend_seperator" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/sticker_recommend_popup_close"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <com.bsb.hike.ui.utils.RecyclingImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_sticker_recommend_popup_close" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sticker_recommend_popup_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <com.bsb.hike.ui.utils.RecyclingImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_sticker_recommend_settings" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>