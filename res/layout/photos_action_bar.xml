<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/photos_action_bar_left_right_padding"
    android:paddingRight="@dimen/photos_action_bar_left_right_padding" >

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/title"
                style="@style/ActionBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:visibility="gone" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/subtext"
                style="@style/ActionBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ab__action_bar_subtitle_bottom_margin"
                android:layout_marginTop="@dimen/ab__action_bar_subtitle_top_margin"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/done_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:orientation="horizontal" >
		<View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#11FFFFFF" />

        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/photos_action_internal_padding"
            android:layout_marginRight="8dp"
            android:src="@drawable/action_bar_arrow" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/done_text"
            style="@style/ActionBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/next_signup"
            android:textColor="@color/photos_action_bar_font" />
    </LinearLayout>

    <View
        android:id="@+id/seprator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent_white_ab"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@id/done_container"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/actionsView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/seprator"
        android:background="@drawable/bg_overflow_menu_selector"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/actionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_wand" />
    </LinearLayout>

</RelativeLayout>