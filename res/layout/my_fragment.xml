<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/profile_image"
            style="@style/RoundedStyle"
            android:layout_width="198dp"
            android:layout_height="198dp"
            android:layout_marginTop="40dp"
            android:contentDescription="Profile Image"
            android:src="@drawable/ic_default_avatar_group" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="My name"
            android:textColor="@color/caller_free_call"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/statuslayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:contentDescription="Status Layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="48dp"
            android:paddingRight="48dp">

            <ImageView
                android:id="@+id/status_mood"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/subtext"
                style="@style/ProfileHeaderSubText"
                android:contentDescription="Status"
                android:gravity="center"
                android:text="#mystatus"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <include
                android:id="@+id/ic_add_friends"
                layout="@layout/icon_with_badge_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/ic_added_me"
                layout="@layout/icon_with_badge_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/ic_services"
                layout="@layout/icon_with_badge_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>