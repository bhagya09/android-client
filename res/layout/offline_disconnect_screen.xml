<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offline_disconnect_pop_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/offline_disconnect_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/offline_disconnect_card_background" >

        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/connected_avatar"
            style="@style/RoundedStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/content_des_round_user_image_chatthread_actionbar" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/connect_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/connected_avatar"
            android:text="Connect with Sahil?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/disconnect_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connect_request"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/connected_avatar"
            android:text="Your connection with Deepak will end."
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/horizontal_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disconnect_warning"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/disconnect_pop_up_seperator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_separator"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/reject_disconnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="NO"
                android:textColor="@color/black"
                style="?android:attr/borderlessButtonStyle" />

            <ImageView
                android:id="@+id/vertical_separator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.05"
                android:src="@drawable/vertical_seperator" />

            <Button
                android:id="@+id/accept_disconnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="YES"
                android:textColor="@color/black"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>