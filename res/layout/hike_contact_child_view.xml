<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/compose_item_height"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/conv_item_padding"
        android:paddingRight="@dimen/conv_item_padding" >
        
        
        <com.bsb.hike.view.RoundedImageView
            android:id="@+id/avatar"
            style="@style/RoundedStyle"
            android:layout_width="@dimen/compose_avatar_dimen"
            android:layout_height="@dimen/compose_avatar_dimen"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        
	    <ImageView
            android:id="@+id/add_friend"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_favourite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/add_friend"
            android:layout_toRightOf="@id/avatar"
            style="@style/compose_name_container_margins"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/contact"
                style="@style/ListItemHeaderTextView" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/info"
                style="@style/ListItemSubHeaderTextView" />
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>