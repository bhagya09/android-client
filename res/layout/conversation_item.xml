<?xml version="1.0" encoding="utf-8"?>

 	<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/conversation_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/conv_item_height"
        android:background="@drawable/conversation_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/conv_item_padding"
        android:paddingRight="@dimen/conv_item_padding" >

        <FrameLayout
            android:layout_width="@dimen/conv_item_avatar"
            android:layout_height="@dimen/conv_item_avatar">

            <com.bsb.hike.view.RoundedImageView
                android:id="@+id/avatar"
                style="@style/AvatarStyle.MorePadding" />
                 
            <com.bsb.hike.ui.utils.RecyclingImageView
                android:id="@+id/stealth_badge"
                android:src="@drawable/stealth_badge"
                android:layout_gravity="bottom|right"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:visibility="gone"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:paddingBottom="1dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/last_message_timestamp"
                    style="@style/ListItemRightSubText"
                    android:layout_alignParentRight="true"
                    android:text="9:35AM"/>

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/contact"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/last_message_timestamp"
                    android:text="Kavin Mittal kja skldlkas daskd asdjlasj dlasdl asdj las das d"
                    style="@style/ListItemHeaderTextView" />
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/msg_status_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3.5dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="bottom"
                    android:visibility="gone" />
                
                 <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/last_message"
                    android:layout_marginRight="16dp"
                    style="@style/ListItemSubHeaderTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:visibility="invisible" />
                 
                 
                <ImageView
                    android:id="@+id/mute_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mute"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone" />

              
                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/unread_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_messagecounter"
                        android:layout_marginLeft="4dp"
                        android:text="99"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        style="@style/BaseStyleTextView" />
               
            </LinearLayout>
        </LinearLayout>
 </LinearLayout>