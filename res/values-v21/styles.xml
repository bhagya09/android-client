    <style name="PeopleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ContactsActionBarStyle</item>
        <item name="android:colorPrimaryDark">@color/blue_hike</item>
