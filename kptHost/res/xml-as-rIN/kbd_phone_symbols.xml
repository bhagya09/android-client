<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:atx="http://schemas.android.com/apk/res-auto"
    atx:kpt_horizontalGap="0dp"
    atx:kpt_keyHeight="@dimen/kpt_key_height"
    
    atx:kpt_keyLabel2TextSize="@dimen/kpt_keyLabel2TextSize"
    atx:kpt_keyLabel2XPos="@dimen/kpt_keyLabel2XPos"
    atx:kpt_keyLabel2YPos="@dimen/kpt_keyLabel2YPos"
    
    atx:kpt_keyLabelTextSize="@dimen/kpt_keyLabelTextSize"
    atx:kpt_keyLabelXPos="@dimen/kpt_keyLabelXPos"
    atx:kpt_keyLabelYPos="@dimen/kpt_keyLabelYPos"
    
    atx:kpt_fontSizeApplicable="false"
    atx:kpt_fontStyleApplicable="false"
    atx:kpt_isGlideSupported = "false"
    atx:kpt_keyType="@integer/kpt_key_type_normal"
    atx:kpt_isRTL="false"

    atx:kpt_keyWidth="25%p"
    atx:kpt_verticalGap="0dp" >

    <Row>
        <Key
            atx:kpt_codes="2535"
            atx:kpt_keyEdgeFlags="left"
            atx:kpt_keyLabel="১" />
        <Key
            atx:kpt_codes="2536"
            atx:kpt_keyLabel="২" />
        <Key
            atx:kpt_codes="2537"
            atx:kpt_keyLabel="৩" />
        <Key
            atx:kpt_codes="-5"
            atx:kpt_iconText="@string/kpt_icontext_delete"
            atx:kpt_isRepeatable="true"
            atx:kpt_keyEdgeFlags="right"
            atx:kpt_keyLabelYPos="0.50"
            atx:kpt_useExternalFont="true" />
    </Row>
    <Row>
        <Key
            atx:kpt_codes="2538"
            atx:kpt_keyEdgeFlags="left"
            atx:kpt_keyLabel="৪" />
        <Key
            atx:kpt_codes="2539"
            atx:kpt_keyLabel="৫" />
        <Key
            atx:kpt_codes="2540"
            atx:kpt_keyLabel="৬" />
        <Key
            atx:kpt_codes="-15"
            atx:kpt_keyEdgeFlags="right"
            atx:kpt_keyIcon="@drawable/kpt_adaptxt_settings_fk" />
    </Row>
    <Row>
        <Key
            atx:kpt_codes="2541"
            atx:kpt_keyEdgeFlags="left"
            atx:kpt_keyLabel="৭" />
        <Key
            atx:kpt_codes="2542"
            atx:kpt_keyLabel="৮" />
        <Key
            atx:kpt_codes="2543"
            atx:kpt_keyLabel="৯" />
        <Key
            atx:kpt_codes="-13"
            atx:kpt_iconText="@string/kpt_icontext_globe_share"
            atx:kpt_keyEdgeFlags="right"
            atx:kpt_keyLabel2YPos="0.25"
            atx:kpt_keyLabelYPos="0.70"
            atx:kpt_useExternalFont="true" />
    </Row>
    <Row atx:kpt_rowEdgeFlags="bottom" >
        <Key
            atx:kpt_codes="-16"
            atx:kpt_keyLabel="@string/kpt_phone_mode_change_to_sym_shift" />
        <Key
            atx:kpt_codes="2534,43"
            atx:kpt_keyLabel="০ +" />
        <Key
            atx:kpt_codes="46,44"
            atx:kpt_keyLabel=".," />
        <Key
            atx:kpt_codes="10"
            atx:kpt_iconText="@string/kpt_icontext_enter_kbhide"
            atx:kpt_keyEdgeFlags="right"
            atx:kpt_keyLabel2YPos="0.35"
            atx:kpt_useExternalFont="true" />
    </Row>

</Keyboard>