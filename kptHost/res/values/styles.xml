<?xml version="1.0" encoding="utf-8"?>

<resources>
	<style name="Theme"> 
        <item name="backgroundDimAmount">0.6</item>     	
    </style> 
    
	<style name="kpt_myDialog" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
	    <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@null</item>
	     <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
	</style>
    <style name="Theme.CustomDialog">
		<item name="android:windowBackground">@null</item>
	</style>
	
	<style name="AdaptxtTheme" parent="@android:style/Theme">
	<!--  To override the Tab Widget's style alone. Bug Id: 5902-->
    <item name="android:tabWidgetStyle">@style/kpt_LightTabWidget</item>
	</style>
	
	<style name="Adaptxtprefstyle" parent="AdaptxtTheme">
        	<item name="android:textAppearance">@android:style/TextAppearance.Large</item>
                <item name="android:textAppearanceMedium">@android:style/TextAppearance.Large</item>
                <item name="android:textAppearanceLarge">@android:style/TextAppearance.Large</item>
	</style> 

	<style name="kpt_LightTabWidget" parent="@android:style/Widget.TabWidget">
	<!--  To override the Tab Widget's text color.-->
    <item name="android:textColor">@drawable/kpt_text_selector</item>
	</style>
	
   <style name="Theme.Transparent" parent="AdaptxtTheme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@color/kpt_transparent</item>
    <item name="android:windowNoTitle">false</item>
      <item name="android:addStatesFromChildren">false</item>
      
  </style>
 <style name="Holo.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/kpt_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/kpt_progress_indeterminate_horizontal_holo</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    
   <style name="kpt_full_screen_dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
   </style>
   
   <style name="kpt_customize_headers" >
    <item name="android:gravity">center</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/kpt_customization_size</item>
  </style>
 
  
</resources>
