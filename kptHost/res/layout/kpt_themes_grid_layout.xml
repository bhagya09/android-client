<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kpt_gridbg"
    android:padding="8dip" >


    <TextView
        android:id="@+id/grid_themes_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
     	android:gravity="center_horizontal"
        android:text="Theme Name"
        android:textColor="@color/kpt_white_color_text"
        android:paddingBottom="5dip"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/grid_themes_logo"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignLeft="@+id/grid_themes_name"
        android:layout_below="@+id/grid_themes_name"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
         />

