<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="50dip">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1">

		<TextView android:layout_width="fill_parent"
			android:textSize="24sp" android:paddingLeft="10dip"
			android:paddingTop="4dip" android:layout_height="wrap_content"
			android:textColor="@android:color/white"
			android:id="@+id/account_type" />

		<TextView android:layout_width="fill_parent"
			android:paddingLeft="10dip" android:paddingTop="5dip"
			android:paddingBottom="8dip"
			android:layout_height="wrap_content" android:id="@+id/account_msg" />
	</LinearLayout>

	<ImageView android:id="@+id/account_status_icon"
		android:layout_marginTop="8dip"
		android:layout_width="48dip" android:layout_height="48dip" />

</LinearLayout>
