<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:atx="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
       
    <com.kpt.adaptxt.beta.keyboard.MoreKeysKeyboardView
            android:id="@+id/more_keys_keyboard_view"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            
            atx:keyBackground="@drawable/kpt_btn_keyboard_key_popup"
            atx:keyTextColor="@color/kpt_primary_key_color"            
            atx:shadowRadius="0"
            atx:keyTextSize="@dimen/kpt_keyLabelTextSize"            
            atx:keyPreviewLayout="@layout/kpt_keyboard_key_preview"
            atx:popupLayout="@layout/kpt_keyboard_popup_keyboard"            
            atx:keyTextColor2="@color/kpt_secondary_key_color"
	        atx:keyTextSize2="14sp"
	        atx:keyTextSize3="16sp"  
	        atx:labelTextSize="14sp"       
	        atx:keyPreviewOffset="-12dip"
	        atx:keyPreviewHeight="50dip"            	        
            />
    
