<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4169E1" >

        <TextView
            android:id="@+id/shortcutView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/kpt_UI_STRING_ATR_COLUMNHEADER_1_7003"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/substitutionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/kpt_UI_STRING_ATR_COLUMNHEADER_2_7003"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
	<TableLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
   
    android:stretchColumns="2"
    android:id="@+id/parentLayout" >
    <TableRow >
		<TextView android:id="@+id/addshortcut" android:layout_width="wrap_content" android:layout_height="wrap_content" 
		 android:text="@string/kpt_UI_STRING_MENUKEY_ITEMS_1_7003"
		 android:textSize="15sp" android:textStyle="bold"
		 android:layout_weight="0.5"
		  android:padding="10dp"
		 />
		<TextView android:id="@+id/delshortcut" android:layout_width="wrap_content" android:layout_height="wrap_content" 
		 android:text="@string/kpt_UI_STRING_MENUKEY_ITEMS_2_7003"
		 android:textSize="15sp" android:textStyle="bold"
		 android:layout_weight="0.5"
		  android:padding="10dp"
		 />
		</TableRow>
    </TableLayout>
	


    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />
</LinearLayout>
