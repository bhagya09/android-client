<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip" >

    <ImageView
        android:id="@+id/shortcut_delete"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:src="@drawable/kpt_delete" />

    <TextView
        android:id="@+id/shortcut_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_toLeftOf="@id/shortcut_delete"
        android:textSize="@dimen/kpt_cust_gestures_text_size" />

    <TextView
        android:id="@+id/shortcut_sub_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/shortcut_title"
        android:paddingBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_toLeftOf="@id/shortcut_delete" />

</RelativeLayout><!-- From: file:/Users/anubansal/Documents/workspace_kptold/kptHost/res/layout/kpt_shortcuts_display_list_item.xml -->