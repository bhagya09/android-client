<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dip" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/kpt_subtitle"
        android:textSize="@dimen/kpt_cust_gestures_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kpt_adaptxt_icon_to"
            android:textSize="@dimen/kpt_cust_gestures_text_size" />

        <EditText
            android:id="@+id/custom_gesture_shortcut_char"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:inputType="textNoSuggestions"
            android:maxLength="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/shortcut_already_exits_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kpt_UI_STRING_SETTINGS_ERRORMSG_1_220"
        android:textColor="#ff0000"
        android:textSize="@dimen/kpt_cust_gestures_warning_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/custom_gesture_shortcut_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:text="@string/kpt_dialog_gesture_type_app"
        android:textSize="@dimen/kpt_cust_gestures_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="5dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Spinner
            android:id="@+id/custom_gesture_applications_spinner"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:prompt="@string/kpt_UI_STRING_SETTINGS_ITEM_2_220" />

        <EditText
            android:id="@+id/custom_gesture_websites_clipboard_edittext"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:inputType="textNoSuggestions" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/anubansal/Documents/workspace_kptold/kptHost/res/layout/kpt_add_edit_custom_gesture_dialog_layout.xml -->