<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    
    <ImageView
        android:id="@+id/icon_download_cancel"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:paddingTop="10dip"
        android:visibility="gone" 
        android:layout_alignParentRight="true"
        android:background="@drawable/kpt_download_cancel"/>
   

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/icon"
        android:layout_gravity="right"
        android:paddingRight="15dp" />

     <ImageView
        android:id="@+id/icon"
        android:layout_width="48dip"
        android:layout_toLeftOf="@id/icon_download_cancel"
        android:layout_height="48dip"
        android:paddingTop="10dip" 
        android:layout_alignParentRight="true"/>
    

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/icon"
        android:layout_weight="1.0"
        android:orientation="vertical" >
        
     <TextView
		android:id="@+id/list_header_title1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="2dip"
		android:paddingBottom="2dip"
		android:paddingLeft="5dip"
		android:text="Download"
		android:textColor="@android:color/darker_gray"
		android:gravity="center_vertical"
		android:visibility="gone"
		style="?android:attr/listSeparatorTextViewStyle" />
        
        

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="10dip"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="6dip"
            android:paddingTop="5dip"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/list_item_icon_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="6dip"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/downlaod_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="6dip"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/addon_progressbar"
            style="@style/Kpt_Holo.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:paddingBottom="10dip"
            android:paddingLeft="6dip"
            android:visibility="gone" >
        </ProgressBar>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/anubansal/Documents/workspace_kptold/kptHost/res/layout/kpt_list_item_icon_text.xml -->